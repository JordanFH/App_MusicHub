<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="3dp"
    android:paddingRight="5dp"
    android:paddingBottom="3dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgIconoArtista"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_item_artista"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/txtNombreArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/imgIconoArtista"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Artista"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blanco_opaco"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNumAlb_Can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNombreArtista"
        android:layout_alignStart="@id/txtNombreArtista"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="top|start"
        android:maxLines="1"
        android:text="Álbumes • Canciones"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blanco_opaco" />

</RelativeLayout>