<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="3dp"
    android:paddingRight="5dp"
    android:paddingBottom="3dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgIconoMusica"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/ic_item_cancion"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/txtCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/imgIconoMusica"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="CanciÃ³n"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blanco_opaco"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtArtista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCancion"
        android:layout_alignStart="@id/txtCancion"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="top|start"
        android:maxLines="1"
        android:text="Artista"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blanco_opaco" />

</RelativeLayout>